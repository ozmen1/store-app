<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
</head>
<body>
    <header>
        <partial name = "_Navbar" /> <!-- partial view'in çalışması için viewimports'a taghelper'lar eklendi -->
        @RenderSection("Top", false) <!-- isteğe bağlı tasarımlarda kullanmak üzere -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        Footer
        @RenderSection("Footer", false) <!-- isteğe bağlı tasarımlarda kullanmak üzere -->
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required:false) @*İsteğe bağlı section tanımladık*@
</body>
</html>